import numpy as np
import matplotlib.pyplot as plt

# Fitness function: maximize f(x) = x^2
def fitness(x):
    return x**2

# Initialize population (5 random solutions)
pop = np.random.uniform(-10, 10, 5)

# To store best values per generation
best_vals = []

# Run for 5 generations
for gen in range(5):
    fit = fitness(pop)
    parent = pop[np.argmax(fit)]  # Select best
    best_vals.append(fitness(parent))
    
    # Mutation: create new children around the parent
    children = parent + np.random.uniform(-1, 1, 5)
    pop = children

# Final best solution
best = pop[np.argmax(fitness(pop))]

print("Best:", best)
print("Fitness:", fitness(best))

# Visualization
plt.figure(figsize=(8, 5))
plt.plot(range(1, 6), best_vals, marker='o', color='green')
plt.title("Genetic Algorithm Optimization Progress")
plt.xlabel("Generation")
plt.ylabel("Best Fitness Value")
plt.grid(True)
plt.show()

# Visualize final population distribution
x = np.linspace(-10, 10, 200)
y = fitness(x)
plt.figure(figsize=(8, 5))
plt.plot(x, y, label='Fitness Function: xÂ²')
plt.scatter(pop, fitness(pop), color='red', label='Final Population')
plt.scatter(best, fitness(best), color='blue', s=100, label='Best Solution')
plt.title("Final Population on Fitness Curve")
plt.xlabel("x")
plt.ylabel("f(x)")
plt.legend()
plt.grid(True)
plt.show()
