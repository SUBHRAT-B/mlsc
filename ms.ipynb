# Install MiniSom (run this once if not installed)
# pip install minisom

from minisom import MiniSom
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.preprocessing import MinMaxScaler

# Step 1: Load the dataset
data = pd.read_csv("Social_Network_Ads.csv")

# Step 2: Select numeric columns for SOM
# We'll use Age and EstimatedSalary
X = data[['Age', 'EstimatedSalary']].values

# Step 3: Normalize the data between 0 and 1
scaler = MinMaxScaler(feature_range=(0, 1))
X_scaled = scaler.fit_transform(X)

# Step 4: Initialize SOM (grid 5x5, input_len=2 because we have 2 features)
som = MiniSom(x=5, y=5, input_len=2, sigma=1.0, learning_rate=0.5)
som.random_weights_init(X_scaled)

# Step 5: Train SOM
som.train_random(X_scaled, 200)  # 200 iterations

# Step 6: Plot the SOM Distance Map (U-Matrix)
plt.figure(figsize=(6, 6))
plt.pcolor(som.distance_map().T, cmap='coolwarm')  # Distance map
plt.title("Self-Organizing Map (SOM) - Social Network Ads")
plt.colorbar(label='Distance')

# Optional: Plot each data point on top of the SOM
for i, x in enumerate(X_scaled):
    w = som.winner(x)  # Get winning node for each sample
    plt.text(w[0]+0.5, w[1]+0.5, str(data['Purchased'][i]), 
             color='black', fontdict={'size': 10, 'weight': 'bold'})

plt.show()

