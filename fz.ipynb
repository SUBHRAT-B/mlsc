import numpy as np
import matplotlib.pyplot as plt

# Define fuzzy sets (membership values between 0 and 1)
temperature = np.linspace(0, 100, 100)  # Temperature from 0°C to 100°C

# Fuzzy membership functions
def cold(temp):
    return np.maximum(0, np.minimum(1, (30 - temp) / 30))

def warm(temp):
    return np.maximum(0, np.minimum((temp - 20) / 30, (80 - temp) / 30))

def hot(temp):
    return np.maximum(0, (temp - 60) / 40)

# Calculate memberships
cold_vals = cold(temperature)
warm_vals = warm(temperature)
hot_vals = hot(temperature)

# Plot fuzzy sets
plt.figure(figsize=(8, 5))
plt.plot(temperature, cold_vals, label='Cold')
plt.plot(temperature, warm_vals, label='Warm')
plt.plot(temperature, hot_vals, label='Hot')
plt.title("Fuzzy Membership Functions for Temperature")
plt.xlabel("Temperature (°C)")
plt.ylabel("Membership Degree")
plt.legend()
plt.grid(True)
plt.show()

# ------------------- Fuzzy Operations -------------------

# Example fuzzy memberships for two variables
A = np.array([0.2, 0.5, 0.8])
B = np.array([0.4, 0.6, 0.3])

# Fuzzy AND → min(A, B)
fuzzy_and = np.minimum(A, B)

# Fuzzy OR → max(A, B)
fuzzy_or = np.maximum(A, B)

# Fuzzy NOT → 1 - A
fuzzy_not_A = 1 - A

print("A:", A)
print("B:", B)
print("Fuzzy AND:", fuzzy_and)
print("Fuzzy OR:", fuzzy_or)
print("Fuzzy NOT (A):", fuzzy_not_A)

# ------------------- Simple Fuzzy Rule Example -------------------
# Rule: IF temperature IS hot THEN fan_speed IS high
# Let’s say temp = 70°C
temp_value = 70
hot_degree = hot(temp_value)
fan_speed = hot_degree * 100  # Output proportional to membership

print(f"\nAt {temp_value}°C → Hot degree = {hot_degree:.2f} → Fan Speed = {fan_speed:.1f}%")
