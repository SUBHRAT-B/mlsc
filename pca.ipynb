import pandas as pd
from sklearn.preprocessing import StandardScaler
from sklearn.decomposition import PCA
import matplotlib.pyplot as plt

# Step 1: Load dataset properly
data = pd.read_csv("Social_Network_Ads.csv")

# Step 2: Show first few rows and data types
print("Preview:")
print(data.head())
print("\nData types:")
print(data.dtypes)

# Step 3: Select only numeric columns (exclude text)
# Weâ€™ll use Age and EstimatedSalary (both numeric)
X = data[['Age', 'EstimatedSalary']].copy()
y = data['Purchased']

# Step 4: Handle any non-numeric issues
# Sometimes CSVs load headers or blanks as strings
X = X.apply(pd.to_numeric, errors='coerce')
X = X.dropna()  # drop any rows with missing numeric values
y = y.loc[X.index]  # keep labels aligned

# Step 5: Scale and apply PCA
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

pca = PCA(n_components=2)
X_pca = pca.fit_transform(X_scaled)

# Step 6: Plot PCA
plt.figure(figsize=(8,6))
plt.scatter(X_pca[:, 0], X_pca[:, 1], c=y, cmap='rainbow', edgecolor='k')
plt.title("PCA Visualization - Social Network Ads")
plt.xlabel("Principal Component 1")
plt.ylabel("Principal Component 2")
plt.show()

# Step 7: Explained variance
print("Explained Variance Ratio:", pca.explained_variance_ratio_)
